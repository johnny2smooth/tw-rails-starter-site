<%#
Locals:
  • title       – String
  • description – String
  • members     – Array of hashes, each:
      { name:, role:, image: { src:, alt:, class: } }
%>
<div class="bg-white py-24 sm:py-32">
  <div class="mx-auto grid max-w-7xl gap-20 px-6 lg:px-8 xl:grid-cols-3">
    <div class="max-w-xl">
      <h2 class="text-3xl font-semibold tracking-tight text-pretty text-gray-900 sm:text-4xl">
        <%= title %>
      </h2>
      <p class="mt-6 text-lg/8 text-gray-600">
        <%= description %>
      </p>
    </div>
    <ul role="list" class="grid gap-x-8 gap-y-12 sm:grid-cols-2 sm:gap-y-16 xl:col-span-2">
      <% members.each do |m| %>
        <li>
          <div class="flex items-center gap-x-6">
            <%= image_tag m[:image][:src],
                          alt:   m[:image][:alt],
                          class: m[:image][:class] %>
            <div>
              <h3 class="text-base/7 font-semibold tracking-tight text-gray-900">
                <%= m[:name] %>
              </h3>
              <p class="text-sm/6 font-semibold text-indigo-600">
                <%= m[:role] %>
              </p>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
