<%#
Locals:
  • headline    – String
  • description – String
  • form        – Hash with
      :label, :input_id, :input_name, :placeholder,
      :input_classes, :button_text, :button_classes
  • stats       – Array of hashes, each with
      :icon_svg, :title, :description
%>

<div class="relative sm:rounded-3xl isolate overflow-hidden bg-gray-900 py-16 sm:py-24 lg:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 
                lg:max-w-none lg:grid-cols-2">
      
      <div class="max-w-xl lg:max-w-lg">
        <h2 class="text-4xl font-semibold tracking-tight text-white">
          <%= headline %>
        </h2>
        <p class="mt-4 text-lg text-gray-300">
          <%= description %>
        </p>

        <div class="mt-6 flex max-w-md gap-x-4">
          <label for="<%= form[:input_id] %>" class="sr-only">
            <%= form[:label] %>
          </label>
          <input
            id="<%= form[:input_id] %>"
            type="email"
            name="<%= form[:input_name] %>"
            required
            placeholder="<%= form[:placeholder] %>"
            autocomplete="email"
            class="<%= form[:input_classes] %>"
          />
          <button type="submit" class="<%= form[:button_classes] %>">
            <%= form[:button_text] %>
          </button>
        </div>
      </div>

      <dl class="grid grid-cols-1 gap-x-8 gap-y-10 sm:grid-cols-2 lg:pt-2">
        <% stats.each do |stat| %>
          <div class="flex flex-col items-start">
            <div class="rounded-md bg-white/5 p-2 ring-1 ring-white/10">
              <%= stat[:icon_svg].html_safe %>
            </div>
            <dt class="mt-4 text-base font-semibold text-white">
              <%= stat[:title] %>
            </dt>
            <dd class="mt-2 text-base/7 text-gray-400">
              <%= stat[:description] %>
            </dd>
          </div>
        <% end %>
      </dl>
    </div>
  </div>

  <div aria-hidden="true"
       class="absolute top-0 left-1/2 -z-10 -translate-x-1/2 blur-3xl xl:-top-6">
    <div style="clip-path: polygon(74.1% 44.1%,100% 61.6%,97.5% 26.9%,85.5% 0.1%,
                               80.7% 2%,72.5% 32.5%,60.2% 62.4%,52.4% 68.1%,47.5% 58.3%,
                               45.2% 34.5%,27.5% 76.7%,0.1% 64.9%,17.9% 100%,27.6% 76.8%,
                               76.1% 97.7%,74.1% 44.1%)"
         class="aspect-1155/678 w-288.75 bg-linear-to-tr
                from-[#ff80b5] to-[#9089fc] opacity-30">
    </div>
  </div>
</div>
