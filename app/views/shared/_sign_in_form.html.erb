<%#
Locals:
  • logo_url             – String (URL to company logo)
  • company_name         – String
  • page_title           – String
  • form_action          – String (URL where the form submits)
  • forgot_password_url  – String
  • submit_text          – String (button label)
  • sign_up_text         – String
  • sign_up_url          – String
%>
<div class="mt-12 flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <%= image_tag logo_url, alt: company_name, class: "mx-auto h-10 w-auto" %>
    <h2 class="mt-10 text-center text-2xl/9 font-bold tracking-tight text-white">
      <%= page_title %>
    </h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= form_with url: form_action, method: :post, html: { class: "space-y-6" } do |f| %>
      <div>
        <%= f.label :email, "Email address", class: "block text-sm/6 font-medium text-gray-900" %>
        <div class="mt-2">
          <%= f.email_field :email,
                required: true,
                autocomplete: "email",
                class: "block w-full rounded-md bg-white/5 px-3 py-1.5 text-base text-black
                        outline-1 -outline-offset-1 outline-black/10 placeholder:text-gray-500
                        focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-500 sm:text-sm/6" %>
        </div>
      </div>

      <div>
        <div class="flex items-center justify-between">
          <%= f.label :password, "Password", class: "block text-sm/6 font-medium text-gray-900" %>
          <div class="text-sm">
            <%= link_to "Forgot password?", forgot_password_url,
                  class: "font-semibold text-indigo-400 hover:text-indigo-600" %>
          </div>
        </div>
        <div class="mt-2">
          <%= f.password_field :password,
                required: true,
                autocomplete: "current-password",
                class: "block w-full rounded-md bg-white/5 px-3 py-1.5 text-base text-black 
                        outline-1 -outline-offset-1 outline-black/10 placeholder:text-gray-500
                        focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-500 sm:text-sm/6" %>
        </div>
      </div>

      <div>
        <%= f.submit submit_text,
              class: "flex w-full justify-center rounded-md bg-indigo-500 px-3 py-1.5
                      text-sm/6 font-semibold text-white hover:bg-indigo-600
                      focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-500" %>
      </div>
    <% end %>

    <p class="mt-10 text-center text-sm/6 text-gray-500">
      Not a member?
      <%= link_to sign_up_text, sign_up_url,
            class: "font-semibold text-indigo-400 hover:text-indigo-600" %>
    </p>
  </div>
</div>
