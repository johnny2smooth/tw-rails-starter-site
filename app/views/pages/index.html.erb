<%# app/views/pages/index.html.erb %>

<%# — HEADER / NAV — %>
<%= render 'shared/header',
      company_name: @page.company_name,
      logo_url:     @page.logo_url,
      root_path:    @page.root_path,
      nav_links:    @page.nav_links,
      login_link:   @page.login_link %>

<%# — HERO BANNER — %>
<%= render 'shared/hero_banner',
      title:        @page.hero_title,
      subtitle:     @page.hero_subtitle,
      announcement: @page.hero_announcement,
      primary:      @page.hero_primary,
      secondary:    @page.hero_secondary %>

<%= render 'shared/feature_section',  @page.feature_section %>
<%= render 'shared/bento_card_section',    @page.cards_section   %>
<%= render 'shared/dark_cta_section', @page.cta_section     %>
