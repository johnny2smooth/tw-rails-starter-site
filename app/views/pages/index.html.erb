<%# app/views/pages/index.html.erb %>

<%# — NAV LINKS — %>
<% nav_links = [
  { title: 'Product',     path: '#' },
  { title: 'Features',    path: '#' },
  { title: 'Marketplace', path: '#' },
  { title: 'Company',     path: '#' }
] %>

<% login_link = { title: 'Log in', path: '#' } %>

<%# — HERO ANNOUNCEMENT — %>
<% announcement = {
  text:      'Announcing our next round of funding.',
  link_text: 'Read more',
  link_url:  '#'
} %>

<%# — PRIMARY & SECONDARY CTAs — %>
<% primary = {
  text:         'Get started',
  url:          '#',
  html_options: {
    class: 'rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-xs hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600'
  }
} %>

<% secondary = {
  text:         'Learn more',
  url:          '#',
  html_options: {
    class: 'text-sm/6 font-semibold text-gray-900'
  }
} %>

<%# — HEADER / NAV — %>
<%= render 'shared/header',
      company_name: 'Your Company',
      logo_url:    'https://tailwindcss.com/plus-assets/img/logos/mark.svg?color=indigo&shade=600',
      root_path:   '#',
      nav_links:   nav_links,
      login_link:  login_link %>

<%# — HERO BANNER — %>
<%= render 'shared/hero_banner',
      title:        'Data to enrich your online business',
      subtitle:     'Anim aute id magna aliqua ad ad non deserunt sunt. Qui irure qui lorem cupidatat commodo. Elit sunt amet fugiat veniam occaecat.',
